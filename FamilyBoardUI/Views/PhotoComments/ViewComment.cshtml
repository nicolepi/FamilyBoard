@model  FamilyBoardUI.Models.CommentWithPhotoModel

@{
    ViewBag.Title = "ViewComment";
}


<h2>
    Comments   
    
</h2>
@if (Model.Photo.Files.Any(f => f.FileType == FamilyBoard.FileType.Picture))
{
    <dd align="middle">
        <img src="~/File?id=@Model.Photo.Files.First(f => f.FileType == FileType.Picture).FileId" alt="Picture" width="300" />
    </dd>
}
<p>
    @Html.ActionLink("Make a Comment", "Create", "PhotoComments", new { photoId = Model.Photo.Id, user = User.Identity.Name }, null)
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Photo.Title)
        </th>*@
        <th>
            <p>Create by</p>
        </th>
        <th>
            <p>Comment</p>
        </th>
        <th>
            <p>Date Created</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.PhotoComments) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.Photo.Title)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
