@model IEnumerable<FamilyBoard.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Photos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            <p>Created by</p>
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            <p>Date Created</p>
        </th>
        <th>
            <p>Actions</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>            
            @Html.ActionLink("Show Photo", "Details", new { id = item.Id }) |
            @Html.ActionLink("Show Comments", "ViewComment", "PhotoComments", new { id = item.Id }, null) |  <!--test-->
            @Html.ActionLink("Make a Comment", "Create", "PhotoComments")    <!--test-->
                      
           
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
           
        </td>
    </tr>
}

</table>
